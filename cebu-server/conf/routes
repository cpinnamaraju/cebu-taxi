# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

GET     /upload                     controllers.Application.upload()

POST     /upload                     controllers.Application.uploadHandler()

# API
GET     /api/location               controllers.Api.location(vehicleId: String, timestamp: String, lat: String, lon: String, velocity: String, heading: String, accuracy: String)

GET     /api/segment 				controllers.Api.segment(segmentId: java.lang.Integer)

GET     /api/traces 				controllers.Api.traces(vehicleId: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
